<% @posts.each do |post| %>
    <div class="card">
        <h2 class="articleName"><%= post.id %> - <%= post.title %></h2>
        <div class="articleInfo">
            <span class="author">De <%= post.user.username %></span>
            <span class="date">Le <%= l post.updated_at, :format => :sample %></span>
        </div>
        <p class="articleDescription"><%= post.description %></p>
        <%= link_to "Lire l'article", post_path(post.id), { :class=>"readButton" } %>

        <% if user_signed_in? %>
            <% if current_user.id == post.user_id %>
                <div class="buttonGroup">
                    <%= button_to "Delete", {:controller => "post", :action => 'destroy', :id => post.id}, :confirm => "Are you sure you want to delete it ?", :method => :delete, :class => 'delete' %>
                    <%= link_to "Editer", edit_post_path(post.id), :class => 'edit' %>
                </div>
            <% end %>
        <% end %>

     </div>
<% end %>
