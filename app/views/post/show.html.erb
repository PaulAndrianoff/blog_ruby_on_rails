<div class="card">
    <h2><%= @post.title %></h2>
    <span class="username"><%= t('from') %> <%= @user.username %></span>
    <p class="description"><%= @post.description %></p>
    <div class="text">
        <p><%= @post.post_text%></p>
    </div>

    <div class="buttonGroup">
        <% if user_signed_in? %>
            <% if current_user.id == @post.user_id %>
                    <%= button_to t('delete'), {:controller => "post", :action => 'destroy', :id => @post.id, :class => 'delete'}, :confirm => "Are you sure you want to delete it ?", :method => :delete %>
                    <%= link_to t('edite'), edit_post_path(@post.id), :class => 'edit' %>
            <% end %>
        <% end %>

        <% if user_signed_in? %>
            <%= link_to t('add_comment'), new_comment_path(id: @post) %>
        <% end %>

    </div>
</div>

<div>
    <h2><%= t('comments') %></h2>
    <%= render partial: 'shared/commentsShow' %>
</div>
