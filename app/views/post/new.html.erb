<h1>Formulaire pour un nouveau post</h1>

<%= form_for @post, :url => { :action => "create" } do |f| %>
  <%= f.label 'Titre' %><br>
  <%= f.text_field :title, placeholder: 'Insérez votre titre...' %><br><br>

  <%= f.label 'La description du post' %><br>
  <%= f.text_area :description, placeholder: 'Insérez votre description...' %><br><br>

  <%= f.label 'Ton post' %><br>
  <%= f.text_area :post_text, placeholder: 'Insérez votre text...' %><br><br>

  <%= f.label 'Image de couverture' %><br>
  <%= f.text_field :image_url, placeholder: 'Insérez votre image...' %><br><br>

  <%= f.hidden_field :user_id, value: current_user.id %>

  <%= f.submit 'Envoyer' %>
<% end %>