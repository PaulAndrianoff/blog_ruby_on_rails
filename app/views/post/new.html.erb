<div class="card">
    <h2>Formulaire pour un nouveau post</h2>

    <%= form_for @post, :url => { :action => "create" } do |f| %>
      <%= f.label t('post_t') %><br>
  <%= f.text_field :title, placeholder: t('post_title') %><br><br>

  <%= f.label t('post_description') %><br>
  <%= f.text_area :description, placeholder: t('post_desc_area') %><br><br>

  <%= f.label t('post_content') %><br>
  <%= f.text_area :post_text, placeholder: t('post_content_area') %><br><br>

      <%= f.hidden_field :user_id, value: current_user.id %>

      <%= f.submit t('send') %>
    <% end %>
</div>
