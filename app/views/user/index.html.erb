<h1 class="title">Liste des utilisateurs</h1>

<ul>
<% @users.each do |user| %>
    <li>
        <h2><%= user.username %> - <%= user.id %></h2>
        <p class="mail"><%= t('user_mail') %> : <span><%= user.email %></span></p>
        <%= link_to t('view_profile'), user_path(user.id), :class => 'profilLink' %>
    </li>
<% end %>
